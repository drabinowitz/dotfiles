# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Relaunch binding
bind r:cmd;ctrl relaunch

# Layout bindings
layout iterm 'iTerm' throw 1 resize
layout iterm AFTER focus 'iTerm'
bind n:ctrl layout iterm

layout browser 'Google Chrome' throw 0 resize
layout browser AFTER focus 'Google Chrome'
bind i:ctrl layout browser

layout google_chrome 'Google Chrome' throw 1 resize
layout google_chrome AFTER focus 'Google Chrome'
bind i:cmd;ctrl layout google_chrome

layout firefox 'Firefox' throw 1 resize
layout firefox AFTER focus 'Firefox'
bind o:cmd;ctrl layout firefox

layout safari 'Safari' throw 1 resize
layout safari AFTER focus 'Safari'
bind p:cmd;ctrl layout safari

# Resize Bindings
bind right:alt       resize +10% +0
bind left:alt        resize -10% +0
bind up:alt          resize +0   -10%
bind down:alt        resize +0   +10%
bind right:ctrl;alt  resize -10% +0 bottom-right
bind left:ctrl;alt   resize +10% +0 bottom-right
bind up:ctrl;alt     resize +0   +10% bottom-right
bind down:ctrl;alt   resize +0   -10% bottom-right

# Push Bindings
bind l:ctrl;alt push right bar-resize:screenSizeX/2
bind h:ctrl;alt push left  bar-resize:screenSizeX/2
bind k:ctrl;alt push up    bar-resize:screenSizeY/2
bind j:ctrl;alt push down  bar-resize:screenSizeY/2

# Nudge Bindings
bind right:shift;alt nudge +10% +0
bind left:shift;alt  nudge -10% +0
bind up:shift;alt    nudge +0   -10%
bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind l:cmd;ctrl        focus right
bind h:cmd;ctrl        focus left
bind k:cmd;ctrl        focus up
bind j:cmd;ctrl        focus down
bind k:cmd;ctrl;shift  focus behind
bind j:cmd;ctrl;shift  focus behind

# Window Hints
bind esc:cmd hint
